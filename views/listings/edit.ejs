<% layout("/layouts/boilerplate") %>

<body>
  <h3>Edit your Listing</h3>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        name="title"
        value="<%= listing.title %>"
        type="text"
        class="title form-control"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="description" class="description form-control">
<%= listing.description %></textarea
      >
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image</label>

      <input
        name="image"
        value="<%= listing.image %>"
        type="text"
        class="image form-control"
      />
    </div>

    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input
          name="price"
          value="<%= listing.price %>"
          type="number"
          class="price form-control"
        />
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input
          name="country"
          value="<%= listing.country %>"
          type="text"
          class="country form-control"
        />
      </div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input
        name="location"
        value="<%= listing.location %>"
        type="text"
        class="location form-control"
      />
    </div>

    <button class="btn btn-dark add-btn">Edit</button>
  </form>
</body>
